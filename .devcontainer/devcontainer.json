{
  "name": "n8n-chatwork-bot",
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],
  "service": "python-app",

  // ← VSCode が勝手に生成する /workspaces/** に任せればOK
  "workspaceFolder": "/workspaces/n8n-chatwork-bot",

  "customizations": {
    "vscode": {
      "extensions": [],
      "settings": {
        "settingsSync.enabled": false,
        // 他のローカル拡張機能がコンテナ側にインストールされないよう明示する
        "remote.extensionKind": {
          "ms-python.python": "workspace",
          "*": "ui"
        },
        "remote.containers.defaultExtensions": []
      }
    }
  },

  // ← mounts はバグを起こしやすいので一旦削除
  "overrideCommand": false,
  "remoteUser": "root"
}
